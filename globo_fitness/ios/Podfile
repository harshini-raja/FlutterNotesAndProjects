platform :ios, '12.0'

# CocoaPods analytics sends network stats synchronously affecting Flutter application performance.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Uncomment this line to define a global platform for your project
# platform :ios, '12.0'

# Prevent Cocoapods from embedding a `flutter.framework` target in the generated workspace.
install! 'cocoapods', :disable_input_output_paths => true

target 'Runner' do
  use_frameworks!

  # Pods for Runner
  pod 'YourPodName', '~> 1.0'

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

